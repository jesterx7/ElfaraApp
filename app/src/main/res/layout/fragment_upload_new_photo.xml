<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/mainBackground"
    tools:context=".ui.UploadNewPhotoFragment">

    <ProgressBar
        android:id="@+id/progressBarUploadNewPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325px"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerUploadNewPhoto"
                android:layout_width="match_parent"
                android:layout_height="750px" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnUploadUploadNewPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25px"
                    android:text="Upload"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_weight="1"
                    android:textColor="@color/whitecolor"/>
                <Button
                    android:id="@+id/btnSubmitPhotoUploadNewPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25px"
                    android:text="Submit"
                    android:backgroundTint="@color/successColor"
                    android:layout_weight="1"
                    android:textColor="@color/whitecolor"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>