<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment"
    android:background="@color/mainBackground">

    <LinearLayout
        android:id="@+id/llLogoMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/logoColor">
        <ImageView
            android:id="@+id/imgLogoMain"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:src="@drawable/img_logo_home" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/whitecolor"
                android:text="Dodolan Apps"/>
            <View android:background="@color/whitecolor"
                android:layout_width = "150dp"
                android:layout_height="1dp"
                android:layout_below="@id/llLogoMain"/>
            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/whitecolor"
                android:text="Event Name"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/whitecolor"
        android:layout_width = "match_parent"
        android:layout_height="1.5dp"
        android:layout_gravity="center"
        android:layout_below="@id/llLogoMain"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llLogoMain">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressBarMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/tvEventName"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/llInputSellingMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:onClick="goToFormForm"
                            android:src="@drawable/icon_input_form"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Input Selling"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llAccessSettingsMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="50dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:onClick="goToAccessSettings"
                            android:src="@drawable/icon_access_settings"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Access Settings"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/llReportSellingMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:onClick="goToSummarySelling"
                            android:src="@drawable/icon_statistic"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Report Selling"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llReportSamplingMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="50dp">
                        <ImageView
                            android:id="@+id/imgBtnSamplingMain"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:onClick="goToSummarySampling"
                            android:src="@drawable/icon_statistic"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Report Sampling"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/llDatabaseMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:onClick="goToReadData"
                            android:src="@drawable/icon_read_data"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Database"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llAddUserMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="50dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:onClick="goToAddUser"
                            android:src="@drawable/icon_add_user"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Add User"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/llEventTitleMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:onClick="goToEventTitle"
                            android:src="@drawable/icon_change_title"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Event Title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llUploadPhotoMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="50dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:onClick="goToUploadPhoto"
                            android:src="@drawable/icon_upload_images"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Upload Photo"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>