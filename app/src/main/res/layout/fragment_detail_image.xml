<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/mainBackground"
    tools:context=".ui.DetailImageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgDetailImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/progressBarDetailImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="visible"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tvDownloadDetailImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Downloading...."
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_below="@id/progressBarPhotoList"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnBackDetailImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/whitecolor"
                    android:text="back"/>
                <Button
                    android:id="@+id/btnDownloadDetailImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/successColor"
                    android:textColor="@color/whitecolor"
                    android:text="download"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>